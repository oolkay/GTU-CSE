	@echo $(white)
	@echo "The compilation has done. It will be executed in 2 seconds..."
	@echo "\n\n"

## COMPILE RULE ##
compile:
	@gcc main.c -o test

## RUN RULE ##
run:
	@./test

## CLEAN RULE ##
clean:
	@rm -f test

